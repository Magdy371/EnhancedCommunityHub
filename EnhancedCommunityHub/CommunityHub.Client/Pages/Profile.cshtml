@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile Management";
}

<div class="container mt-5">
    <h2>Profile Management</h2>
    <form method="post" class="mt-4">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" asp-for="Profile.Name" required />
            <span asp-validation-for="Profile.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" asp-for="Profile.Email" required />
            <span asp-validation-for="Profile.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" asp-for="Profile.Password" />
            <span asp-validation-for="Profile.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success mt-3">@Model.SuccessMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
    }
</div>
